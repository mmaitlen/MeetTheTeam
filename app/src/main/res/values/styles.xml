<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WrappedTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PersonNameTextView" parent="WrappedTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="DetailTextView" parent="WrappedTextView">
        <item name="android:textSize">@dimen/font_default</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/spacing_default</item>

    </style>

</resources>
